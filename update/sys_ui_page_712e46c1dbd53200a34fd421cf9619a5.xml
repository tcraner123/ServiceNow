						<div ng-message="required">{{ 'INFORM_XM.ERROR.REQUIRED' | translate }}</div>
						<div ng-message="maxlength">{{ 'INFORM_XM.ERROR.MAX_LENGTH' | translate:'{ max_length: 200 }' }}</div>
					</div>
